{% extends 'base.html.twig' %}

{% block title 'Toutes les recettes' %}

{% block body %}
    <p>
        <a class ="btn-primary btn " href ="{{path('recipe.create') }}">Creer une recette</a>
    </p>
    <table class= "table">
        <thread>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thread>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}"> {{recipe.title}} </a>
            </td>
            <td>
                <div class="d-flex gap-1">
                    <a class = "btn btn-primary" href="{{ path('recipe.edit', {id: recipe.id}) }}"> Editer </a>
                    <form action ="{{ path('recipe.delete', {id:recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Supprimer </button>   
                    </form>
                </div>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
